# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# WhatsApp Business API
WHATSAPP_BUSINESS_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_BUSINESS_ACCESS_TOKEN=your_whatsapp_token_here

# Bling ERP API - OBTENHA EM developer.bling.com.br
BLING_API_URL=https://api.bling.com.br/v3
BLING_CLIENT_ID=your_bling_client_id_here
BLING_CLIENT_SECRET=your_bling_client_secret_here

# Marketplace APIs
MERCADO_LIVRE_CLIENT_ID=your_ml_client_id_here
MERCADO_LIVRE_CLIENT_SECRET=your_ml_client_secret_here
SHOPEE_PARTNER_ID=your_shopee_partner_id_here
SHOPEE_PARTNER_KEY=your_shopee_partner_key_here
AMAZON_ACCESS_KEY=your_amazon_access_key_here
AMAZON_SECRET_KEY=your_amazon_secret_key_here

# Redis (for cache and sessions)
REDIS_URL=redis://localhost:6379

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/ecommind

# App Configuration - MUDE PARA SEU DOMÍNIO EM PRODUÇÃO
NEXTAUTH_URL=http://localhost:3002
NEXTAUTH_SECRET=your_nextauth_secret_here

# Security - GERE UMA CHAVE SEGURA DE 32 CARACTERES
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Feature Flags - Controle de módulos
NEXT_PUBLIC_FLAG_BI_V2=on
NEXT_PUBLIC_FLAG_PLANNING_V1=on
NEXT_PUBLIC_FLAG_ADS_V1=off
NEXT_PUBLIC_FLAG_OPS_V1=off
NEXT_PUBLIC_FLAG_MARKET_V1=on
NEXT_PUBLIC_FLAG_CHAT360_V1=off
NEXT_PUBLIC_FLAG_MISSIONS_V1=on

# ⚠️  INSTRUÇÕES DE SEGURANÇA:
# 1. NUNCA commite o arquivo .env.local no Git
# 2. Use senhas e chaves fortes
# 3. Em produção, use variáveis de ambiente do servidor
# 4. Mantenha as credenciais seguras e privadas
# 5. Feature flags: 'on' = habilitado, 'off' = desabilitado
