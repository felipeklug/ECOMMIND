# Supabase Configuration (REQUIRED)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# WhatsApp Business API (Phase 2)
WHATSAPP_BUSINESS_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_BUSINESS_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_BUSINESS_PHONE_ID=your_phone_number_id

# Bling ERP API (Phase 1 - CRITICAL)
BLING_API_URL=https://api.bling.com.br/v3
BLING_CLIENT_ID=your_bling_client_id
BLING_CLIENT_SECRET=your_bling_client_secret

# Marketplace APIs (Phase 2)
MERCADO_LIVRE_CLIENT_ID=your_ml_client_id
MERCADO_LIVRE_CLIENT_SECRET=your_ml_client_secret
SHOPEE_PARTNER_ID=your_shopee_partner_id
SHOPEE_PARTNER_KEY=your_shopee_partner_key
AMAZON_ACCESS_KEY=your_amazon_access_key
AMAZON_SECRET_KEY=your_amazon_secret_key

# Redis (for cache and sessions) - Optional for development
REDIS_URL=redis://localhost:6379

# Database (Supabase handles this)
DATABASE_URL=your_supabase_database_url

# App Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_min_32_chars

# Security Configuration (CRITICAL)
ENCRYPTION_KEY=your_32_char_encryption_key_here_with_special_chars!@#$

# Development flags
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development
